<%- include("../partials/head.ejs")%>

<%- include('../partials/header.ejs') %>

<main class="container">
<div class="row">
    <div class="col-md-offset-3 col-md-12">
        <h1><%= title%></h1>
        <a href="/contact-list/add" class="btn btn-primary" role="button">
        <i class="fas fa-plus-square fa-lg"></i> Add Contact
        </a>
        <br>
        <br>
        <table class="table table-bordered table-striped table-hover">
            <!--Header Row-->
            <tr>
                <th class="text-center col-2">First Name</th>
                <th class="text-center col-2">Last Name</th>
                <th class="text-center">Email</th>
                <th class="text-center">Contact Number</th>
                <th class="text-center col-2"></th>
                <th class="text-center col-2"></th>
            </tr>

            <!--Repeatable template Row-->
            <% for(let count = 0; count < ContactsList.length; count++){ %>
                <tr>
                <td class="text-center"> <%= ContactsList [count].FirstName %></td>
                <td class="text-center"> <%= ContactsList [count].LastName %></td>
                <td class="text-center"> <%= ContactsList [count].Email %></td>
                <td class="text-center"> <%= ContactsList [count].ContactNumber %></td>
                <td class="text-center"><a href="/contact-list/edit/<%= ContactsList [count].id %>" class="btn btn-primary editBTN"><i class="fas fa-retweet fa=lg"></i> Edit</a> </td>
                <td class="text-center"><a href="/contact-list/delete/<%= ContactsList [count].id %>" class="btn btn-danger deleteBTN"> <i class="fas fa-minus-square fa-lg"></i> Delete</a></td>
                </tr>
            <% } %>
        </table>
    </div>
</div>
</main>

